<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Dr_joshi">
<androidx.appcompat.widget.Toolbar
    android:id="@+id/tooldoctor"
    android:layout_width="match_parent"
    app:title="DR. AJAY MISHRA"
    android:background="@color/colorPrimary"
    app:titleTextColor="@color/whites"
    android:layout_height="wrap_content"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imaGees"
        android:layout_width="200dp"
        android:layout_height="203dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/default_images" />

    <TextView
        android:id="@+id/namedoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="DR. AJAY MISHRA"
        android:textSize="25dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/description"
        android:layout_marginTop="8dp"
       android:layout_gravity="center"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Dr. Ajay Mishra has done his graduation (MBBS) from prestigious University College of Medical Sciences, Delhi following which he pursued his post graduation in Anesthesiology and Critical Care from Safdarjung Hospital, New Delhi. Thereafter he did his 2nd post graduation in Internal Medicine from Delhi University, his Internal Medicine training is from reputed Dr. Ram Manohar Hospital, New Delhi. He also had done post graduation diploma in Hospital and Health Management from ESI hospital, New Delhi. He is a certified infectious disease from reputed PD Hinduja hospital and Medical Research Institute, Mumbai."
        />
    <LinearLayout
        android:layout_marginEnd="30dp"
        android:background="@color/mycoloe"
     android:gravity="center"
        android:layout_marginStart="23dp"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:drawableStart="@drawable/ic_baseline_call_24"
            android:id="@+id/test"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+919768575858"
            android:textStyle="bold"
            />
            <Button
                android:id="@+id/button"
                android:layout_marginLeft="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CALL"
                />
    </LinearLayout>











    <LinearLayout

        android:gravity="center"
        android:background="@color/mycoloe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="30dp"        >

        <TextView
           android:drawableStart="@drawable/ic_baseline_email_24"
            android:id="@+id/test2"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ajaymishra@gmail.com     "
            android:textStyle="bold"

            />
        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="EMAIL"
            />
    </LinearLayout>







</LinearLayout>
